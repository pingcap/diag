[Unit]
Description=web service
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
LimitNOFILE=1000000
#LimitCORE=infinity
LimitSTACK=10485760
User=$user
ExecStart=$prefix/tidb-foresight/bin/tidb-foresight --home=$prefix/tidb-foresight --prometheus=http://127.0.0.1:$prometheus_port --influxdb=http://127.0.0.1:$influxd_port
Restart=always
RestartSec=15s

[Install]
WantedBy=multi-user.target
